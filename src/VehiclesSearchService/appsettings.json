{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "Serilog": {
        "MinimumLevel": {
            "Default": "Debug",
            "Override": {
                "Microsoft": "Warning",
                "System": "Warning"
            }
        },
        "WriteTo": [
            {
                "Name": "Console"
            }
        ]
    },

    "NHTSA": {
        "RequestPathFormating": "?format=json",
        "RequestMediaType": "application/json",
        "ApiUrl": "https://vpic.nhtsa.dot.gov/api/vehicles"
    },

    "AllowedHosts": "*"
}
